@page "/compound"

<h1>CompoundInterest</h1>

<table class="table table-hover">
    <tr>
        <th>Initial Principal</th>
        <th>
            <input @bind="Principal"/>
        </th>
    </tr>
    <tr>
        <th>Year</th>
        <th>
            <input @bind="Years"/>
        </th>
    </tr>
    <tr>
        <th>Annual Interest Rate (%)</th>
        <th>
            <input @bind="InterestRate"/>
        </th>
    </tr>
    <tr>
        <th>Total:</th>
        <th>@TotalStr</th>
    </tr>
</table>

<button class="btn btn-primary" @onclick="Calculate">Calculate</button>

@code {
    private double Principal { get; set; } = 5000;
    private double InterestRate { get; set; } = 5;
    private int Years { get; set; } = 10;
    private double Total { get; set; } = 0;
    private string TotalStr { get; set; }

    private void Calculate()
    {
        var total = Principal * Math.Pow(1 + InterestRate / 1200, Years * 12);
        TotalStr = total.ToString("C");
    }

}